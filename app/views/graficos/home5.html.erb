<script src="//www.amcharts.com/lib/4/core.js"></script>
<script src="//www.amcharts.com/lib/4/charts.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
<div id="chartdiv" style="width: 100%; height: 1000px;"></div>

<script>
  // Themes begin
am4core.useTheme(am4themes_animated);
var colorSet = new am4core.ColorSet();
// Themes end
/* Create chart instance */
var chart = am4core.create("chartdiv", am4charts.RadarChart);

/* Add data */
chart.data = [{
  "country": "Lithuania",
  "litres": 501,
  "units": 250
}, {
  "country": "Czech",
  "litres": 301,
  "units": 222
}, {
  "country": "Ireland",
  "litres": 266,
  "units": 179
}, {
  "country": "Germany",
  "litres": 165,
  "units": 298
}, {
  "country": "Australia",
  "litres": 139,
  "units": 299
}, {
  "country": "Austria",
  "litres": 336,
  "units": 185
}, {
  "country": "UK",
  "litres": 290,
  "units": 150
}, {
  "country": "Belgium",
  "litres": 325,
  "units": 382
}, {
  "country": "The Ne",
  "litres": 40,
  "units": 172
}];

/* Create axes */
var categoryAxis = chart.xAxes.push(new am4charts.CategoryAxis());
categoryAxis.dataFields.category = "country";
categoryAxis.renderer.labels.template.fontSize = 8;
categoryAxis.renderer.labels.template.paddingTop = 0;
categoryAxis.renderer.labels.template.centerLabelOnFullPeriod = true;
categoryAxis.renderer.labels.template.adapter.add("rotation", function (rotation, target) {
  var value = target.dataItem.category;
  var position = categoryAxis.categoryToPosition(value);
  var angle = categoryAxis.renderer.positionToAngle(position) - 290;
  return angle;
});

var valueAxis = chart.yAxes.push(new am4charts.ValueAxis());

var series2 = chart.series.push(new am4charts.RadarColumnSeries());
series2.dataFields.valueY = "units";
series2.dataFields.categoryX = "country";
series2.name = "Units";
series2.strokeWidth = 0;
series2.columns.template.fill = am4core.color("#CDA2AB");
series2.columns.template.tooltipText = "Series: {name}\nCategory: {categoryX}\nValue: {valueY}";


function createRange(name, startCategory, finishCategory) {

  var range = categoryAxis.axisRanges.create();
  range.category = startCategory;
  range.endCategory = finishCategory;
  range.label.text = name;
  range.label.paddingBottom = 0;
  range.label.location = 0.5;

  range.label.fontWeight = "bolder";
  range.grid.disabled = true;

  // range.axisFill.fill = colorSet.getIndex(index - 3);
  // range.grid.disabled = true;
  // range.label.interactionsEnabled = false;
  range.label.bent = true;

  var axisFill = range.axisFill;
  axisFill.innerRadius = -0.001; // almost the same as 100%, we set it in pixels as later we animate this property to some pixel value
  axisFill.radius = -20; // negative radius means it is calculated from max radius
  axisFill.disabled = false; // as regular fills are disabled, we need to enable this one
  axisFill.fillOpacity = 1;
  axisFill.togglable = true;

}

createRange("Clarity", "Lithuania", "Czech");
createRange("Performance", "Ireland", "Germany");
createRange("Leadership", "Australia", "Austria");
createRange("Culture", "UK", "Belgium");
createRange("Foundation", "The Ne", "The Ne");


</script>